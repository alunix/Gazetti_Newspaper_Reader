<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.try_masterdetail"
    android:id="@+id/aboutMeScroller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal|top"
        android:orientation="vertical" >

        <com.example.try_masterdetail.preference.CircularImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/about_me_1"
            app:border_color="#EEEEEE"
            app:border_width="4dp"
            app:shadow="true" />

        <com.example.try_masterdetail.preference.CircularImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/about_me_2"
            app:border_color="#EEEEEE"
            app:border_width="4dp"
            app:shadow="true" />
    </LinearLayout>

</ScrollView>